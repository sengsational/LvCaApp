<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:id="@+id/detailRelativeLayout"

            tools:context=".DetailSlideActivity"
            tools:showIn="@layout/activity_detail"> <!--app:layout_behavior="@string/appbar_scrolling_view_behavior" -->

            <ImageView
                android:id="@+id/highlighted"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"
                android:gravity="left"
                android:visibility="invisible"
                android:layout_below="@+id/detailname"/>

            <TextView
                android:id="@+id/detailname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingTop="40dp"
                android:textSize="40dp"
                android:gravity="center"
                tools:text="Some Sample Text"
                />
            <TextView
                android:id="@+id/style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:layout_centerHorizontal="true"
                tools:text="Some Sample Style"
                android:layout_below="@+id/detailname"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="20dp"
                android:layout_below="@id/style"
                android:paddingTop="10dp"
                tools:text="This is a a description that can go on and on and on and on on and on and on and on on and on and on and on on and on and on and on on and on and on and on on and on and on and on on and on and on and on on and on and on and on on and on and on and on "
                />
            <TextView
                android:id="@+id/new_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/description"
                android:textStyle="bold|italic"
                android:paddingTop="5dp"
                tools:text="New Arrival"
                />

            <TextView
                android:id="@+id/abv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:textSize="20dp"
                android:paddingTop="30dp"
                tools:text="5.5%"
                />

            <TextView
                android:id="@+id/database_key"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:paddingTop="30dp"
                tools:text="Asheville, NC"
                />
            <TextView
                android:id="@+id/created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/abv"
                android:textSize="15dp"
                tools:text="Tasted 12/31/15"
                android:paddingTop="20dp"
                android:layout_centerHorizontal="true"
                />


        </RelativeLayout>
    </ScrollView>

